{% extends 'base.html.twig' %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Név</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Üzenet</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}" class="btn btn-primary mt-3 mb-3">Vissza a listára</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-success mt-3 mb-3">Módosítás</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
