<div class="container">
    <div class="row">
        <div class="col-sm-6">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
                {{ form_errors(form) }}
    
                {{ form_row(form.name, {'attr' : { 'class' : 'form-control mb-3' }}) }}
                {{ form_row(form.email, {'attr' : { 'class' : 'form-control mb-3' }}) }}
                {{ form_row(form.message, {'attr' : { 'class' : 'form-control mb-3' }}) }}
    
                <button class="btn btn-primary">{{ button_label|default('Ment√©s') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
