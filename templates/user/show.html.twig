{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-primary mb-3 mt-3">Vissza a listára</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success mb-3 mt-3">Módosítás</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
