{% extends 'base.html.twig' %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Mutasd</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Módosítás</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Nem található adat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(users) }}

    <a href="{{ path('app_user_new') }}" class="btn btn-success mt-3">Létrehozás</a>
{% endblock %}
